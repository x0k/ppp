{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "check": {
      "dependsOn": [
        "^build"
      ]
    },
    "build": {
      "dependsOn": [
        "check"
      ],
      "env": [
        "BASE_PATH"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "persistent": true,
      "cache": false
    },
    "preview": {
      "persistent": true,
      "cache": false,
      "dependsOn": [
        "build"
      ]
    }
  }
}