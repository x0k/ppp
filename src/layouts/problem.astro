---
import RootLayout from "@/components/root-layout.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<RootLayout title={title} class="h-screen">
  <main
    class="h-full overflow-hidden grid md:grid-cols-[1fr_2fr] grid-rows-2 md:grid-rows-1"
  >
    <div class="h-full overflow-auto">
      <slot name="description" />
    </div>
    <div class="h-full overflow-auto">
      <slot name="editor" />
    </div>
  </main>
</RootLayout>
