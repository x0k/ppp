---
import RootLayout from "@/components/root-layout.astro";
import EditorProvider from "@/containers/editor-provider.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<RootLayout title={title} class="h-screen">
  <main class="h-full overflow-hidden flex">
    <div class="h-full overflow-auto resize-x w-[800px]">
      <slot name="description" />
    </div>
    <div class="grow h-full overflow-auto">
      <EditorProvider>
        <slot name="editor" />
      </EditorProvider>
    </div>
  </main>
</RootLayout>
